@using Entity
@model Person
@{
	ViewBag.Title = "Register";
}

<style>
	body {
		background: none;
		background: -webkit-linear-gradient(left, #5F9EA0, #00c6ff);
	}

	.kayit, .kayit:hover {
		background-color: #87CEFA;
		border-color: #87CEFA;
	}
</style>


<div class="container register">
	<div class="row">
		<div class="col-md-3 register-left">
			<img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
			<h3>Hoşgeldin :)</h3>
			
		</div>
		<div class="col-md-9 register-right">

			<div aria-labelledby="home-tab">
				<h3 class="register-heading">Kayıt Ol</h3>
				@using (Html.BeginForm("Register", "Members", FormMethod.Post, htmlAttributes: new { @enctype = "multipart/form-data" }))
				{
					@Html.AntiForgeryToken() 

					if (ViewBag.Errors != null && ViewBag.Errors.Count() != 0)
					{
						<div class="alert alert-danger">
							@foreach (string item in ViewBag.Errors) 
							{
								<p>@item</p>
							}
						</div>
					}


					<div class="row register-form">
						<div class="col-md-6">
							<div class="form-group">
								@Html.TextBoxFor(x => x.UserName, new { @placeholder = "Kullanıcı Adı", @class = "form-control" })
							</div>
							<div class="form-group">
								
								@Html.TextBoxFor(x => x.Email, new { @placeholder = "Email*", @class = "form-control" })
								
							</div>
							<div class="form-group">
								<input type="radio" name="gender" id="gender" value="girl" />Kadın
							</div>
							<div class="form-group">
								<input type="radio" name="gender" id="gender" value="boy" />Erkek
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								@Html.TextBox("Pass", null, new { @type = "password", @class = "form-control", @placeholder = "Şifre*" })
							</div>

							<div class="form-group">
								@Html.Label("Fotoğraf", new { @class = "control-label" })
								@Html.TextBox("img", null, new { @type = "file", @class = "form-control" })
							</div>
							<button class="btn btn-warning btn-lg kayit">Kayıt Ol</button>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>